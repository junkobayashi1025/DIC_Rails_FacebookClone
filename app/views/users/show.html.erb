<h1><%= @user.name %>のページ</h1>
<% if flash[:notice] %>
  <p class="alert alert-primary"><%= flash[:notice] %></p>
<% end %>
<p>メールアドレス: <%= @user.email %></p>
<% if @user.id == current_user.id %>
  <%= link_to "プロフィールを編集", edit_user_path(current_user.id), class:"btn btn-success" %>
  <%= link_to '投稿する', new_blog_path, class:"btn btn-primary" %>
<% end %>

<div class="margin_top">
<% @user.blogs.each do |blog| %>
<div class="margin_top">
<div class="card">
  <div class="card-header">
    <h4><%= blog.title %></h4>
  </div>
  <div class="card-body">
    <div class="">
    <% if blog.image.present?%>
    <%= image_tag blog.image.url, class: "image_show"%>
    <% else %>
    <%= image_tag "/assets/noimage.png", class: "image_show" %>
    <% end %>
    </div>
    <div class="text">
    <span class="card-text"><%= simple_format(blog.body) %></span>
    </div>
    <div class="clear">
    </div>
  </div>
  </div>
  </div>
  <% end %>
  </div>
