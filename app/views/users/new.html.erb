<h1>ユーザー登録</h1>
<% if @user.errors.any? %>
  <div id="error_explanation" class="alert-danger">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= render partial: 'form', locals: { user: @user } %>
