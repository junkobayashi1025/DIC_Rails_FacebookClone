<div class="d-flex align-items-center">
  <h1>記事作成</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to '一覧', blogs_path, class: "btn btn-outline-dark" %>
  </div>
</div>
<% if @blog.errors.any? %>
  <div id="error_explanation" class="alert-danger">
    <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= render 'form' %>
