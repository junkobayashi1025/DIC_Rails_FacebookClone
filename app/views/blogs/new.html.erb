<div class="d-flex align-items-center">
  <h1>新規作成</h1>
</div>
<% if @blog.errors.any? %>
  <div id="error_explanation" class="alert-danger">
    <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= render 'form' %>
