<div class="d-flex align-items-center">
  <h1>確認画面</h1>
    <div class="ml-auto boards__linkBox">
      <%= link_to '一覧', blogs_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
  <h3>下記の内容でよろしいですか？</h3>
  <%= form_with(model: @blog, local: true ,url: choose_new_or_edit ) do |f| %>
    <div class="form-group">

    </div>
    <div class="form-group">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :body, '本文' %>
      <%= f.text_area :body, class: 'form-control', rows: 10 %>
    </div>
    <div class="form-group">
    <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %>
    <%= f.file_field :image %>
    </div>
    <%= f.submit '保存', class: 'btn btn-primary' %>
    <%= f.submit '戻る', class: 'btn btn-primary', name: 'back' %>
  <% end %>
